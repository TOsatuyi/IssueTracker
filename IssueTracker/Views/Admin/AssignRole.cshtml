@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager


@model List<IdentityUser>


@{
    ViewData["Title"] = "AssignRole";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Assign Role</h2>

<form asp-action="AssignRole" method="post">
    <div class="form-group">
        <label for="userId">Select User</label>
        <select id="userId" name="userId" class="form-control" asp-items="ViewBag.Users"></select>
    </div>
    <div class="form-group">
        <label for="roleName">Select Role</label>
        <select id="roleName" name="roleName" class="form-control" asp-items="ViewBag.Roles"></select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Assign Role</button>
</form>
